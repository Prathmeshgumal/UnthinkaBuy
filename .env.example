# Frontend Variables (Next.js)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Backend URL Configuration
# For Local Development: http://localhost:8000
# For Vercel Production: /fastapi
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8000

# Optional: Explicitly set your production domain (e.g., https://unthinkabuy.vercel.app)
# This is helpful if Vercel's auto-detection fails.
NEXT_PUBLIC_APP_URL=

# Backend Variables (FastAPI) - usually in backend/.env, but listed here for reference
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
# JWT Secret (generate with: openssl rand -hex 32)
SECRET_KEY=your_jwt_secret_key
# Database Connection String
POSTGRES_URL=your_postgres_connection_string
# Vercel Root Path (Only for Vercel)
# FASTAPI_ROOT_PATH=/fastapi
